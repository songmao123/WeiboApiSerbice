<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey_800"
        android:contentDescription="content description"
        android:scaleType="centerCrop" />

    <com.modong.service.view.SmoothCheckBox
        android:id="@+id/photo_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:checked="true"
        app:color_checked="@color/colorPrimary"
        app:stroke_width="2px" />

</FrameLayout>